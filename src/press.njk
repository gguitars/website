---
layout: base.njk
page_id: press
pagination:
  data: locales
  size: 1
  alias: locale
locales: [en, it]
permalink: "/{% if locale == 'it' %}it/{% endif %}press/index.html"
eleventyComputed:
  title: "{{ siteData.pages.press | localeField('title', locale) | default('Press & Reviews - Giungi Guitars') }}"
---

<main class="pt-24 px-6 max-w-7xl mx-auto w-full">
    <header class="mb-16 border-b border-slate-100 pb-10">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-end">
            <div>
                {% set hero = siteData.pages.press | localeField('Hero', locale) %}
                <span class="mono text-[10px] text-slate-400 tracking-[0.2em] mb-4 block uppercase">
                    {% if locale == 'it' %}Media{% else %}Media{% endif %}
                </span>
                <h1 class="heading-xl page-title-large">
                    {% if locale == 'it' %}Stampa <br> & Recensioni{% else %}Press <br> & Reviews{% endif %}
                </h1>
            </div>
            <div>
                <p class="text-base text-slate-500 leading-relaxed max-w-sm font-light">
                    {{ hero.Intro }}
                </p>
            </div>
        </div>
    </header>

<section class="py-16 md:py-24 px-6 max-w-7xl mx-auto overflow-hidden">
    {% set items = siteData.pages.press | localeField('Items', locale) %}
    {% for item in items %}
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-16 md:gap-24 items-center mb-24 md:mb-32 last:mb-0">
        <div class="{% if loop.index0 % 2 == 1 %}lg:order-2{% endif %}">
            <div class="mb-8">
                <img src="{{ item.Logo }}" alt="{{ item.Outlet }}" class="h-10 md:h-12 w-auto grayscale contrast-125 opacity-80 hover:grayscale-0 hover:opacity-100 transition-all duration-500">
            </div>
            <h2 class="heading-xl text-3xl md:text-5xl uppercase mb-8 leading-tight">
                {{ item.Title | default("Giungi Guitars Feature") }}
            </h2>
        </div>
        <div class="relative {% if loop.index0 % 2 == 1 %}lg:order-1{% endif %} group">
            <div class="bg-white p-3 md:p-6 border border-slate-200 shadow-2xl rotate-1 group-hover:rotate-0 transition-transform duration-700">
                <img src="{{ item.Image }}" alt="{{ item.Outlet }} clipping" class="w-full h-auto">
            </div>
            <!-- Subtle background accent -->
            <div class="absolute -top-6 -left-6 w-32 h-32 bg-slate-100 -z-10 rounded-full blur-3xl opacity-0 group-hover:opacity-100 transition-opacity duration-700"></div>
        </div>
    </div>
    {% endfor %}
</section>
</main>
